    <%- include('./partials/header')%>
    <main id="main">
        <section class="hero-banner">
            <h2>Unlock a World of Flavor</h2>
            <p>Discover delicious and inspiring recipes that are easy to follow and perfect for every occasion.</p>
            <a href="/users/login"><button >Explore Recipes</button></a>
        </section>
        <section class="featured-categories">
            <h2>Explore by Category</h2>
            <ul class="category-list">
                <li><a href="#">Main Courses</a></li>
                <li><a href="#">Appetizers & Snacks</a></li>
                <li><a href="#">Desserts & Baking</a></li>
                <li><a href="#">Salads & Soups</a></li>
                <li><a href="#">Vegan & Vegetarian</a></li>
                <li><a href="#">International Cuisine</a></li>
            </ul>
        </section>
        <section class="featured-recipes">

        </section>
    </main>
